{
  "files.exclude": {
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.awcache": true,
    "**/.next": true,
    "**/dist": true,
    "**/.cache": true,
    "**/*.js.map": true,
    "**/*.orig": true,
    "**/.git": true,
    "**/.gitignore": false,
    "**/.gitmodules": true,
    "**/.server": true,
    "**/coverage": true,
    "**/out": true
  },
  "javascript.suggestionActions.enabled": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },
  "editor.formatOnSave": true,
  "eslint.options": { "configFile": ".eslintrc.json" },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown"
  ],
  "editor.tabSize": 2,
  "typescript.autoClosingTags": true,
  "typescript.validate.enable": true
}
